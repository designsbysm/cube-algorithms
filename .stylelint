{
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
        "color-named": [
            "never",
            {
                "severity": "warning"
            }
        ],
        "color-no-hex": true,
        "indentation": [
            4,
            {
                "severity": "warning"
            }
        ],
        "max-nesting-depth": [
            5,
            {
                "severity": "warning"
            }
        ],
        "number-leading-zero": [
            "never",
            {
                "severity": "warning"
            }
        ],
        "order/order": [
            "dollar-variables",
            "declarations",
            {
                "type": "at-rule",
                "name": "include"
            }
        ],
        "selector-max-compound-selectors": [
            5,
            {
                "severity": "warning"
            }
        ],
        "selector-no-qualifying-type": [
            true,
            {
                "ignore": [
                    "attribute",
                    "class"
                ]
            }
        ]
    }
}